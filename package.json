{
  "name": "nypl-hold-request-consumer",
  "version": "0.0.1",
  "description": "An AWS Lambda written in Node JS, responsible for listening to a stream of Hold Requests and sending all valid data to the appropriate Provider.",
  "main": "index.js",
  "scripts": {
    "lint": "./node_modules/.bin/standard index.js",
    "local-run": "./node_modules/.bin/node-lambda run -j ./sample/sample_event.json",
    "deploy-qa": "./node_modules/.bin/node-lambda deploy -e qa -f ./config/qa.env -S config/event_sources_qa.json -b subnet-f4fe56af -g sg-1d544067",
    "deploy-prod": "./node_modules/.bin/node-lambda deploy -e production -f ./config/prod.env -S config/event_sources_prod.json -b subnet-f4fe56af -g sg-1d544067",
    "package": "./node_modules/.bin/node-lambda package",
    "setup-env": "cp ./sample/.env.sample ./.env",
    "setup-qa-env": "echo $'SLACK_TOKEN=xxxx\nSENDGRID_API_KEY=xxxx' > ./config/qa.env",
    "setup-prod-env": "echo $'SLACK_TOKEN=xxxx\nSENDGRID_API_KEY=xxxx' > ./config/prod.env",
    "setup-qa-sources": "cp ./sample/sample_event_sources.json ./config/event_sources_qa.json",
    "setup-prod-sources": "cp ./sample/sample_event_sources.json ./config/event_sources_prod.json",
    "test": "./node_modules/.bin/mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NYPL/nypl-hold-request-consumer.git"
  },
  "keywords": [
    "aws",
    "lambda",
    "node",
    "kinesis",
    "stream"
  ],
  "author": "Rafael Hernandez",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NYPL/nypl-hold-request-consumer/issues"
  },
  "homepage": "https://github.com/NYPL/nypl-hold-request-consumer#readme",
  "dependencies": {
    "@nypl/nypl-streams-client": "0.1.3"
  },
  "devDependencies": {
    "chai": "4.0.2",
    "mocha": "3.4.2",
    "node-lambda": "0.10.0",
    "sinon": "2.3.4",
    "sinon-chai": "2.11.0",
    "standard": "10.0.2"
  },
  "standard": {
    "ignore": [
      "/sample/",
      "/build/"
    ]
  }
}
