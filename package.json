{
  "name": "nypl-hold-request-consumer",
  "version": "0.0.1",
  "description": "An AWS Lambda written in Node JS, responsible for listening to a stream of Hold Requests and sending all valid data to the appropriate Provider.",
  "main": "index.js",
  "scripts": {
    "lint": "./node_modules/.bin/standard",
    "local-run": "./node_modules/.bin/node-lambda run -f ./config/local.env -j ./sample/sample_event.json",
    "deploy-dev": "./node_modules/.bin/node-lambda deploy -e development -f ./config/dev.env -S config/event_sources_dev.json -b subnet-f4fe56af -g sg-1d544067",
    "deploy-qa": "./node_modules/.bin/node-lambda deploy -e qa -f ./config/qa.env -S config/event_sources_qa.json -b subnet-f4fe56af -g sg-1d544067",
    "deploy-prod": "./node_modules/.bin/node-lambda deploy -e production -f ./config/prod.env -S config/event_sources_prod.json -b subnet-f4fe56af -g sg-1d544067",
    "package": "./node_modules/.bin/node-lambda package",
    "setup-node-lambda-env": "cp ./sample/.env.sample ./.env",
    "setup-local-env": "mkdir -p config && cp ./sample/deployment.env.sample ./config/local.env",
    "setup-dev-env": "mkdir -p config && cp ./sample/deployment.env.sample ./config/dev.env",
    "setup-qa-env": "mkdir -p config && cp ./sample/deployment.env.sample ./config/qa.env",
    "setup-prod-env": "mkdir -p config && cp ./sample/deployment.env.sample ./config/prod.env",
    "setup-dev-sources": "cp ./sample/sample_event_sources.json ./config/event_sources_dev.json",
    "setup-qa-sources": "cp ./sample/sample_event_sources.json ./config/event_sources_qa.json",
    "setup-prod-sources": "cp ./sample/sample_event_sources.json ./config/event_sources_prod.json",
    "test": "NODE_ENV=test ./node_modules/.bin/nyc --reporter=lcov --reporter=text ./node_modules/mocha/bin/mocha",
    "coverage": "./node_modules/.bin/nyc report --reporter=text-lcov | ./node_modules/.bin/coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NYPL/nypl-hold-request-consumer.git"
  },
  "keywords": [
    "aws",
    "lambda",
    "node",
    "kinesis",
    "stream"
  ],
  "author": "Rafael Hernandez",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NYPL/nypl-hold-request-consumer/issues"
  },
  "homepage": "https://github.com/NYPL/nypl-hold-request-consumer#readme",
  "dependencies": {
    "@nypl/nypl-core-objects": "1.1.2",
    "@nypl/nypl-streams-client": "0.1.4",
    "@nypl/scsb-rest-client": "1.0.2",
    "async": "2.5.0",
    "aws-sdk": "2.99.0",
    "axios": "0.16.2",
    "lambda-env-vars": "0.4.0",
    "qs": "6.5.0",
    "winston": "2.3.1"
  },
  "devDependencies": {
    "babel-plugin-istanbul": "4.1.4",
    "babel-register": "6.24.1",
    "chai": "4.0.2",
    "chai-as-promised": "7.1.1",
    "coveralls": "2.13.1",
    "dotenv": "4.0.0",
    "lambda-tester": "3.0.2",
    "mocha": "3.4.2",
    "node-lambda": "0.10.0",
    "nyc": "11.1.0",
    "sinon": "2.3.4",
    "sinon-chai": "2.11.0",
    "standard": "10.0.2"
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "standard": {
    "env": {
      "mocha": true
    },
    "ignore": [
      "/sample/",
      "/build/",
      "config"
    ]
  }
}
